@model LeaderboardModel
@{
    ViewData["Title"] = "Leaderboard";
}

@*<h2>@ViewData["Title"]</h2>*@
<script>
    function sendData(data) {
        document.getElementById("hiddenField").value = data;
    }
</script>
<form asp-controller="Leaderboard" asp-action="Index" class="flexContainer">
    <input asp-for="ButtonValue" type="hidden" id="hiddenField"/>
    <div class="subContainer">
        <input type="image" onclick="sendData('ta')" class="image" src="images/hex_turquoise.svg" alt="Turquoise Team">
        <input type="image" onclick="sendData('td')" class="image" src="images/hex_turquoise.svg" alt="Turquoise Team">
    </div>
    <div class="subContainer">
        <input type="image" onclick="sendData('pa')" class="image" src="images/hex_purple.svg" alt="Purple Team">
        <input type="image" onclick="sendData('pd')" class="image" src="images/hex_purple.svg" alt="Purple Team">
    </div>
    <div class="subContainer">
        <input type="image" onclick="sendData('ba')" class="image" src="images/hex_burgundy.svg" alt="Burgundy Team">
        <input type="image" onclick="sendData('bd')" class="image" src="images/hex_burgundy.svg" alt="Burgundy Team">
    </div>


</form>

<div class="leaderboardTable">

    <table>
        <tr>
            <td>#</td>
            <td colspan="2">Nickname</td>
            <td>Rating</td>
        </tr>
        @for(int i=0; i<@Model.Users.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td colspan="2">@Model.Users[i].Nickname</td>
                <td>@Model.Users[i].ProfileInfo.SuccessfulAttacks</td>
            </tr>
        }
        
    </table>
</div>